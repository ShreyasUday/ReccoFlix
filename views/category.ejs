<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
        href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Noto+Sans+JP:wght@400;700&family=Poppins:wght@400;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css" />
    <title>ReccoFlix</title>
</head>

<body>
    <div class="container">
        <%- include("partials/header.ejs") %>
            <div class="main-content-wrapper">

                <!-- CATEGORY GRID SECTION -->
                <div class="category-page-header">
                    <h2>Browse Categories</h2>
                </div>

                <div class="category-grid">
                    <% const categories=[ { name: "Action" , icon: "‚öîÔ∏è" }, { name: "Adventure" , icon: "üß≠" }, {
                        name: "Sci-Fi" , icon: "üöÄ" }, { name: "Fantasy" , icon: "üßô‚Äç‚ôÇÔ∏è" }, { name: "Drama" , icon: "üé≠"
                        }, { name: "Comedy" , icon: "üòÇ" }, { name: "Mystery" , icon: "üîç" }, { name: "Thriller" ,
                        icon: "üò±" }, { name: "Sports" , icon: "‚öΩ" }, { name: "Romance" , icon: "üíñ" }, {
                        name: "Slice of Life" , icon: "üçÉ" }, { name: "Historical" , icon: "üìú" }, { name: "Horror" ,
                        icon: "üëª" }, { name: "Music" , icon: "üéµ" }, { name: "Supernatural" , icon: "üîÆ" } ]; %>
                        <% categories.forEach(cat=> { %>
                            <form action="/browse" method="post" class="category-form">
                                <button type="submit" class="category-card" name="<%= cat.name.toLowerCase() %>">
                                    <span class="cat-icon">
                                        <%= cat.icon %>
                                    </span>
                                    <span class="cat-name">
                                        <%= cat.name %>
                                    </span>
                                </button>
                            </form>
                            <% }) %>
                </div>

                <!-- TRENDING SECTION -->
                <div class="trending-section">
                    <h2 class="section-title">Trending Now</h2>

                    <% if (trending && trending.length> 0) { %>
                        <div class="carousel-wrapper">
                            <button class="carousel-btn left-btn">‚ùÆ</button>
                            <div class="related-container">
                                <% trending.forEach(item=> { %>
                                    <div class="related-card" data-anime="<%= item.attributes.canonicalTitle %>">
                                        <img
                                            src="<%= (item.attributes.posterImage && item.attributes.posterImage.small) ? item.attributes.posterImage.small : 'https://via.placeholder.com/150' %>" />
                                        <p>
                                            <%= item.attributes.canonicalTitle %>
                                        </p>
                                    </div>
                                    <% }) %>
                            </div>
                            <button class="carousel-btn right-btn">‚ùØ</button>
                        </div>
                        <% } else { %>
                            <p class="no-content">No trending anime available at the moment.</p>
                            <% } %>
                </div>

            </div>
            <%- include("partials/footer.ejs") %>
    </div>
    <script src="js/main.js"></script>
</body>

</html>